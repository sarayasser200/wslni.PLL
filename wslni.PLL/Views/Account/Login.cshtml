@model wslni.BLL.ModelVM.LoginUserVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Include jQuery and jQuery Unobtrusive Validation -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.2/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <style>
        body { 
            background-image: url('https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcRvGMpJ28NRKTMM5JpkSjZirBHnjlNBtDspSRhPpqatOlvBjtn0'); 
            background-repeat: no-repeat; 
            background-size: cover; 
            background-position: center; 
            background-attachment: fixed; 
            height: 100vh; 
            position: relative;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        .login-container {
            border-radius: 10px;
            padding: 20px;
            margin: auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 450px;
            position: relative;
            top: 70px;
            background-color: rgba(255, 255, 255, 0.85);
            right: 25%;
        }

        .login-header {
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 5px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 5px;
        }

        .btn-custom {
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
        }

        .btn-custom:hover {
            background-color: rgba(0, 0, 0, 0.7);
        }

        .wave-image {
            position: absolute;
            top: 110px;
            right: 30px;
            width: 300px;
            height: auto;
            opacity: 0.6;
            z-index: 1;
        }
    </style>
</head>
<body>
    <div class="overlay"></div>

    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSjAiebnkLXCgTf_5R7DbgZSuf07eYSNHfFgz5mnsAlp2Fdez7l" class="wave-image" alt="Wave Image" />

    <div class="container">
        <div class="login-container">
            <div class="login-header">
                Login
            </div>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <!-- Display a summary of validation errors -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                

                <button type="submit" class="btn btn-custom btn-block">Login</button>
            </form>
        </div>
    </div>
</body>
</html>
